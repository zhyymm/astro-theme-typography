---
import PostMeta from '~/components/PostMeta.astro'
import type { Post } from '~/types'
import Giscus from '~/components/comments/Giscus.astro'
import LayoutDefault from '~/layouts/LayoutDefault.astro'

interface Props {
  post: Post
  prev?: any
  next?: any
}

const { post, prev, next } = Astro.props
const { source, commentsUrl } = post.data

const isPostPage = Astro.url.pathname.startsWith('/posts/')
const authorSlug = post.data.author || "admin"
const authorDisplayName = post.data.authorName || authorSlug
---

<article class={`prose relative mx-auto ${isPostPage ? 'post-detailed' : ''}`}>
  <PostMeta post={post} />

  {/* 1. 正文内容容器 */}
  {isPostPage ? (
    <div id="post-content-wrapper" class="relative overflow-hidden max-h-[1200px] transition-[max-height] duration-500 ease-in-out">
      <slot />
      <div id="read-more-mask" class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-white dark:from-zinc-950 to-transparent z-10"></div>
    </div>
  ) : (
    <slot />
  )}

  {/* 2. 阅读全文按钮 */}
  {isPostPage && (
    <div id="read-more-btn-container" class="flex justify-center mt-4">
      <button id="read-more-btn" class="px-6 py-2 border border-orange-500/30 text-orange-500 rounded-full hover:bg-orange-500 hover:text-white transition-all text-sm font-bold flex items-center gap-2 not-prose">
        阅读全文
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
      </button>
    </div>
  )}

  {/* 3. 法义来源 */}
  {isPostPage && source && (
    <div class="mt-12 p-4 bg-zinc-50 dark:bg-zinc-900/40 border-l-4 border-orange-500/50 text-sm italic rounded-r-lg not-prose">
      <span class="opacity-40 text-[10px] uppercase tracking-widest block mb-1 font-bold text-zinc-500">法义来源 / Reference</span>
      <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-orange-600 dark:text-orange-400 hover:underline">
        {source.title} →
      </a>
    </div>
  )}

 {/* --- 4. 底部增强区：极致紧凑 + 完美对齐 --- */}
  {isPostPage && (
    /* 移除外层 mt-8，直接用 pt-8 控制与正文距离 */
    <div class="pb-12 pt-8 border-t border-dashed border-zinc-200 dark:border-zinc-800 !mt-12">
      
      {/* 作者信息栏：!mt-0 紧贴边线 */}
      <div class="not-prose !mt-0">
        <div class="flex items-center justify-between flex-wrap gap-6">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-orange-500/5 flex items-center justify-center text-base shadow-sm border border-orange-500/10 font-bold text-orange-500">
              {authorDisplayName.charAt(0)}
            </div>
            <div class="flex flex-col text-sm">
              <span class="text-[10px] opacity-40 uppercase tracking-widest font-bold text-zinc-500">本文作者</span>
              <a href={`/authors/${authorSlug}/`} class="font-bold hover:text-orange-500 transition-colors no-underline">
                {authorDisplayName}
              </a>
            </div>
          </div>
          {commentsUrl && (
            <a href={commentsUrl} target="_blank" class="px-3 py-1.5 text-[12px] border border-orange-500/20 text-orange-500 rounded-full hover:bg-orange-500 hover:text-white transition-all no-underline">
              参与讨论
            </a>
          )}
        </div>
      </div>

      {/* 5. 上一篇/下一篇 导航：缩减内外边距，!my-6 强制覆盖 prose 边距 */}
      {(prev || next) && (
        <nav class="not-prose !my-6 py-6 border-y border-zinc-100 dark:border-zinc-900">
          <div class="flex flex-col sm:flex-row justify-between gap-6">
            <div class="flex-1 min-w-0">
              {prev && (
                <a href={`/posts/${prev.id.replace(/\.(md|mdx)$/, '')}/`} class="group no-underline block">
                  <div class="text-[11px] font-bold text-zinc-400 mb-1 uppercase tracking-tighter">上一篇</div>
                  <div class="text-[14px] font-medium text-zinc-700 dark:text-zinc-300 group-hover:text-orange-500 transition-colors flex items-baseline gap-1">
                    <span class="shrink-0 opacity-50">←</span>
                    <span class="truncate">{prev.data.title}</span>
                  </div>
                </a>
              )}
            </div>
            <div class="flex-1 min-w-0 sm:text-right">
              {next && (
                <a href={`/posts/${next.id.replace(/\.(md|mdx)$/, '')}/`} class="group no-underline block">
                  <div class="text-[11px] font-bold text-zinc-400 mb-1 uppercase tracking-tighter">下一篇</div>
                  <div class="text-[14px] font-medium text-zinc-700 dark:text-zinc-300 group-hover:text-orange-500 transition-colors flex items-baseline justify-end gap-1">
                    <span class="truncate">{next.data.title}</span>
                    <span class="shrink-0 opacity-50">→</span>
                  </div>
                </a>
              )}
            </div>
          </div>
        </nav>
      )}

      {/* 6. 评论区：使用负 mt 抵消 Giscus 内部标题的自带边距 */}
      <div class="not-prose !mt-0 -mt-2">
        <Giscus />
      </div>
    </div>
  )}
</article>

<script is:inline>
  function initReadMore() {
    const wrapper = document.getElementById('post-content-wrapper');
    const btn = document.getElementById('read-more-btn');
    const mask = document.getElementById('read-more-mask');
    const container = document.getElementById('read-more-btn-container');

    if (!wrapper || !btn) return;

    if (wrapper.scrollHeight <= 1200) {
      wrapper.style.maxHeight = 'none';
      if(container) container.style.display = 'none';
      if(mask) mask.style.display = 'none';
    } else {
      wrapper.style.maxHeight = '1200px';
      if(container) container.style.display = 'flex';
      if(mask) mask.style.display = 'block';
    }

    btn.onclick = () => {
      wrapper.style.maxHeight = wrapper.scrollHeight + 'px';
      if(mask) mask.style.opacity = '0';
      setTimeout(() => {
        if(mask) mask.style.display = 'none';
        if(container) container.style.display = 'none';
        wrapper.style.maxHeight = 'none';
      }, 500);
    };
  }
  initReadMore();
  document.addEventListener('astro:after-swap', initReadMore);
</script>