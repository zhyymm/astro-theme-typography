---
import PostMeta from '~/components/PostMeta.astro'
import type { Post } from '~/types'
import Giscus from '~/components/comments/Giscus.astro'
import LayoutDefault from '~/layouts/LayoutDefault.astro'

interface Props {
  post: Post
  prev?: any
  next?: any
}

const { post, prev, next } = Astro.props
const { source, commentsUrl } = post.data

const isPostPage = Astro.url.pathname.startsWith('/posts/')
const authorSlug = post.data.author || "admin"
const authorDisplayName = post.data.authorName || authorSlug
---

<article class={`prose relative mx-auto ${isPostPage ? 'post-detailed' : ''}`}>
  <PostMeta post={post} />

  {/* 1. 正文内容 */}
  {isPostPage ? (
    <div id="post-content-wrapper" class="relative overflow-hidden max-h-[1200px]">
      <slot />
      <div id="read-more-mask" class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-white dark:from-zinc-950 to-transparent z-10"></div>
    </div>
  ) : (
    <slot />
  )}

  {/* 2. 阅读全文按钮 */}
  {isPostPage && (
    <div id="read-more-btn-container" class="flex justify-center mt-4">
      <button id="read-more-btn" class="px-6 py-2 border border-orange-500/30 text-orange-500 rounded-full text-sm font-bold flex items-center gap-2 not-prose">
        阅读全文 <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
      </button>
    </div>
  )}

  {/* 3. 底部功能区 */}
  {isPostPage && (
    <div class="mt-16">
      {/* 作者栏 */}
      <div class="not-prose pt-8 border-t border-dashed border-zinc-200 dark:border-zinc-800 flex items-center justify-between">
        <div class="flex items-center gap-4 text-sm">
          <div class="w-10 h-10 rounded-full bg-orange-500/5 flex items-center justify-center font-bold text-orange-500 border border-orange-500/10">
            {authorDisplayName.charAt(0)}
          </div>
          <div class="flex flex-col">
            <span class="text-[10px] opacity-40 font-bold text-zinc-500">本文作者</span>
            <a href={`/authors/${authorSlug}/`} class="font-bold hover:text-orange-500 transition-colors no-underline">{authorDisplayName}</a>
          </div>
        </div>
        {commentsUrl && (
          <a href={commentsUrl} target="_blank" class="px-4 py-1.5 text-xs border border-orange-500/20 text-orange-500 rounded-full no-underline hover:bg-orange-500 hover:text-white transition-all">参与讨论</a>
        )}
      </div>

   {/* 5. 导航条：手机端堆叠，Pad/PC端并排 */}
      {(prev || next) && (
        <nav class="not-prose !my-8 py-6 border-y border-zinc-100 dark:border-zinc-900">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {/* 上一篇 */}
            <div class="flex flex-col">
              {prev && (
               <a href={`/posts/${prev.id.replace(/\.(md|mdx)$/, '')}/`} class="group no-underline block not-underline-hover nav-card-hover">
  <div class="text-[10px] font-bold text-zinc-400 mb-1 uppercase tracking-widest">上一篇</div>
  <div class="text-[14px] font-medium text-zinc-700 dark:text-zinc-300 flex items-start gap-1 title-text">
    <span class="shrink-0 mt-0.5 arrow">←</span>
    <span class="line-clamp-2">{prev.data.title}</span>
  </div>
</a>

              )}
            </div>
            
            {/* 下一篇 */}
            <div class="flex flex-col sm:items-end sm:text-right">
              {next && (
                <a href={`/posts/${next.id.replace(/\.(md|mdx)$/, '')}/`} class="group no-underline block not-underline-hover nav-card-hover">
  <div class="text-[10px] font-bold text-zinc-400 mb-1 uppercase tracking-widest sm:text-right">下一篇</div>
  <div class="text-[14px] font-medium text-zinc-700 dark:text-zinc-300 flex items-start sm:justify-end gap-1 title-text">
    <span class="line-clamp-2 text-right">{next.data.title}</span>
    <span class="shrink-0 mt-0.5 arrow">→</span>
  </div>
</a>
              )}
            </div>
          </div>
        </nav>
      )}
      <style>
  /* 强制锁定：只要鼠标进入 a 标签，内部所有 span 必须变橙色 */
  .nav-card-hover:hover .title-text,
  .nav-card-hover:hover .title-text span {
    color: #ea580c !important;
    --un-text-opacity: 1 !important;
  }
</style>

      {/* 评论区 */}
      <div class="not-prose !mt-0">
        <Giscus />
      </div>
    </div>
  )}
</article>

<script is:inline>
  function initReadMore() {
    const wrapper = document.getElementById('post-content-wrapper');
    const btn = document.getElementById('read-more-btn');
    const mask = document.getElementById('read-more-mask');
    const container = document.getElementById('read-more-btn-container');
    if (!wrapper || !btn) return;
    if (wrapper.scrollHeight <= 1200) {
      wrapper.style.maxHeight = 'none';
      if(container) container.style.display = 'none';
      if(mask) mask.style.display = 'none';
    } else {
      wrapper.style.maxHeight = '1200px';
      if(container) container.style.display = 'flex';
      if(mask) mask.style.display = 'block';
    }
    btn.onclick = () => {
      wrapper.style.maxHeight = wrapper.scrollHeight + 'px';
      if(mask) mask.style.opacity = '0';
      setTimeout(() => {
        if(mask) mask.style.display = 'none';
        if(container) container.style.display = 'none';
        wrapper.style.maxHeight = 'none';
      }, 500);
    };
  }
  initReadMore();
  document.addEventListener('astro:after-swap', initReadMore);
</script>