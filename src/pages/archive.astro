---
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import { getCollection } from 'astro:content'
import { formatDate } from '~/utils'

const { translate: t } = Astro.locals
const allPosts = await getCollection('posts', post => !post.data.draft)

// 按日期降序排列
const posts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())

// 按年份分组逻辑
const groups: Record<number, typeof posts> = {}
posts.forEach((post) => {
  const year = post.data.pubDate.getFullYear()
  if (!groups[year]) groups[year] = []
  groups[year].push(post)
})

const years = Object.keys(groups).sort((a, b) => Number(b) - Number(a))
---

<LayoutDefault>
  <div class="py-8">
    <header class="mb-12 border-b border-zinc-200 dark:border-zinc-800 pb-6">
      <div class="text-xs opacity-50 mb-2 tracking-widest uppercase text-zinc-400">Chronicle</div>
      <h1 class="text-2xl font-bold text-zinc-800 dark:text-zinc-100">
        {t('Archive')}
      </h1>
      <p class="text-sm opacity-40 mt-2 text-orange-600 dark:text-orange-500 font-medium">
        共计撰写了 {posts.length} 篇文献
      </p>
    </header>

    <section class="flex flex-col gap-12">
      {years.map((year) => (
        <div class="year-group">
          <h2 class="text-xl font-bold mb-6 flex items-center text-zinc-700 dark:text-zinc-300">
            <span class="w-1 h-4 bg-zinc-300 dark:bg-zinc-700 mr-3"></span>
            {year}
          </h2>

          <ul class="flex flex-col gap-4 ml-4">
            {groups[Number(year)].map((post) => (
              <li class="group flex flex-col md:flex-row md:items-center justify-between gap-2 border-b border-dotted border-zinc-100 dark:border-zinc-800/50 pb-2">
                <h3 class="text-base font-medium">
                  <a href={`/posts/${post.slug || post.id}/`} class="group-hover:text-orange-500 transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                <div class="flex items-center gap-4">
                   <time class="text-xs opacity-30 tabular-nums font-mono italic">
                    {formatDate(post.data.pubDate, 'MM-DD')}
                  </time>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </section>
  </div>
</LayoutDefault>